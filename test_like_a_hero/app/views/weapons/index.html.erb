<h1>Weapons#index</h1>
<p>Find me in app/views/weapons/index.html.erb</p>

<table>
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Current power</th>
        <th>Title</th>
    </thead>
    <tbody>
        <% @weapons.each do |weapon| %>
            <td><%= link_to weapon.id, weapon_path(id: weapon.id) %></td>
            <td><%= weapon.name %></td>
            <td><%= weapon.current_power %></td>
            <td><%= weapon.title %></td>
        <% end %>
    </tbody>
</table>